<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net45</TargetFrameworks>
	<DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
    <Authors>CaptiveAire Systems</Authors>
    <Company>CaptiveAire Systems</Company>
    <Product>SimpleTree</Product>
    <Description>A simple tree implementation for representing objects in a hierarchy.  Provides helper methods for creating and flattening trees</Description>
    <PackageProjectUrl>https://github.com/CaptiveAire/SimpleTree</PackageProjectUrl>
    <RepositoryUrl>https://github.com/CaptiveAire/SimpleTree</RepositoryUrl>
    <PackageTags>tree</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	<OutputPath>..\build\packages</OutputPath>
	<IncludeSymbols>True</IncludeSymbols>
  </PropertyGroup>
  
  <PropertyGroup>
    <NoWarn>1701;1702;1705;1591</NoWarn>
  </PropertyGroup>

</Project>
